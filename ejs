    <script>
    window.onload = function() {
        const ap = new APlayer({
            container: document.getElementById('aplayer'),
            fixed: false,  // 不固定，居中显示
            autoplay: false,
            audio: [
                {
                    name: 'Ajar of Love',
                    artist: 'Artist Name',
                    url: '/uploads/music/ajar_Of_Love.m4a',  // 确保路径正确
                    cover: '/uploads/music/cover.jpg',  // 封面图片路径
                    lrc: '/uploads/music/ajar_Of_Love.lrc'  // 歌词文件路径
                }
            ]
        });
    };
